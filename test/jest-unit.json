{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.unit\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage/unit",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/../src/$1"
  }
}
